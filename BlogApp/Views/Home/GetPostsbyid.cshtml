<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">

                            @*post*@



                            <div class="blog-post">
                                <div class="down-content">
                                    <span>@Model.post.CategoryId </span>
                                    <a href="post-details.html"><h4>@Model.post.Title</h4></a>
                                    <ul class="post-info">
                                        <li><a href="#">@Model.post.AuthorName</a></li>
                                        <li><a href="#">@Model.post.PublishDate</a></li>
                                        <li><a href="#">10 Comments</a></li>
                                    </ul>
                                    <p>
                                        @Model.post.Content
                                    </p>
                                </div>
                            </div>
                        </div>




                        <div class="col-lg-12">

                            @*comments*@

                            <div class="col-lg-12">
                                <div class="sidebar-item comments">
                                    <div class="sidebar-heading">
                                        <h2>4 comments</h2>
                                    </div>
                                    <div class="content">
                                        <ul>
                                            @foreach (var item in Model.comments)
                                            {
                                                <li>
                                                    <div class="right-content">
                                                        <h4>@item.CommentName<span>@item.PublishDate</span></h4>
                                                        <p>@item.Content</p>
                                                    </div>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-lg-12">
                            <div class="sidebar-item submit-comment">
                                <div class="sidebar-heading">
                                    <h2>Your comment</h2>
                                </div>
                                <div class="content">
                                    <form id="comment" method="post">
                                        <div class="row">

                                            <input type="hidden" name="PostId" value="@Model.post.Id" />
                                            <div class="col-md-12 col-sm-12">



                                                <input type="hidden" name="PublishDate" value="@DateTime.Now" />
                                                <div class="col-md-12 col-sm-12">
                                                    <fieldset>
                                                        <input name="CommentName" type="text" id="subject" placeholder="Subject">
                                                    </fieldset>
                                                </div>
                                                <div class="col-lg-12">
                                                    <fieldset>
                                                        <textarea name="Content" rows="6" id="message" placeholder="Type your comment" required=""></textarea>
                                                    </fieldset>
                                                </div>
                                                <div class="col-lg-12">
                                                    <fieldset>
                                                        <button type="submit" id="form-submit" class="main-button">Submit</button>
                                                    </fieldset>
                                                </div>

                                            </div>
                                            </div>
                                    </form>
                                </div>
                            </div>
                        </div>



                    </div>
                </div>
            </div>







            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="sidebar-item search">
                                <form id="search_form" name="gs" method="GET" action="#">
                                    <input type="text" name="q" class="searchText" placeholder="type to search..." autocomplete="on">
                                </form>
                            </div>
                        </div>








                        <div class="col-lg-12">
                            <div class="sidebar-item recent-posts">
                                <div class="sidebar-heading">
                                    <h2>Recent Posts</h2>
                                </div>
                                <div class="content">
