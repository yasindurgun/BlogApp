@{ }


@model List<BlogApp.Models.Post>



                            <div class="col-lg-12">
                                <div class="sidebar-item recent-posts">
                                    <div class="sidebar-heading">
                                        <h2>Recent Posts</h2>
                                    </div>
                                    <div class="content">
                                        <ul>
                                            @foreach (var item in Model) //5 post döndürüyor burası
                                            {
                                <li>
                                    <a href="~/Home/GetPostsbyid/@item.Id">
                                        <h5>@item.Title</h5>
                                        <span>@item.PublishDate</span>
                                    </a>
                                </li>}

                                        </ul>
                                    </div>
                                </div>
                            </div>

